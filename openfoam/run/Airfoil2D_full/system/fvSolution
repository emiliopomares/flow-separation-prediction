FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.1;
        smoother        GaussSeidel;
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         2;
        tolerance       1e-08;
        relTol          0.1;
    }

    UFinal
    {
   	$U;
        relTol 0; 
    }

    pFinal
    {
	$p;
	relTol 0;
    }

    nuTilda
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         2;
        tolerance       1e-08;
        relTol          0.1;
    }
}

PIMPLE
{
	nNonOrthogonalCorrectors 0;
	nCorrectors 1;
	nOuterCorrectors 100;
	pRefCell 0;
	pRefValue 0;

	residualControl
        {
       		p
		{
			tolerance 1e-5;
			relTol 0;
		}
		U
		{
			tolerance 1e-7;
			relTol 0;
		} 
	}

}


SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;

    residualControl
    {
        p               1e-5;
        U               1e-7;
        nuTilda         1e-7;
    }
}

relaxationFactors
{
    fields
    {
        p               0.3;
    }
    equations
    {
        U               0.7;
        nuTilda         0.7;
    }
}


